{
	"manifest_version": 2,
	"name": "Risk Management",
	"version": "1.0",
	"description": "Automated risk management for trading.",
	"default_locale": "en",
	"permissions": ["tabs", "storage"],
	"browser_action": {
	  "default_icon": "assets/icon.png",
	  "default_popup": "popup.html"
	},
	"content_scripts": [
	  {
		"matches": ["<all_urls>"],
		"js": ["content.js"]
	  }
	]
}
